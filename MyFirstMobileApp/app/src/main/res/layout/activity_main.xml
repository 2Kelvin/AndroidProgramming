<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#E1724F"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginBottom="35dp"
        android:textAllCaps="true"
        android:textColor="#ECF688"
        android:gravity="center"
        android:textSize="40sp"
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hi, Rocketman. Welcome to Android Programming" />

    <TextView
        android:gravity="center"
        android:textColor="#262724"
        android:textSize="28sp"
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What it do baaaaaabbyyyy!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="5dp"
            android:textColor="#BDEF84"
            android:textStyle="bold|italic"
            android:textSize="15sp"
            android:backgroundTint="#E91E63"
            android:id="@+id/buttonReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Register" />

        <Button
            android:backgroundTint="#2196F3"
            android:textSize="15sp"
            android:textColor="#D7F108"
            android:id="@+id/buttonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Login" />
    </LinearLayout>

    <ImageButton
        android:layout_marginTop="10dp"
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bulb" />
</LinearLayout>